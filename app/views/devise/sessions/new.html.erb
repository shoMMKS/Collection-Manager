<h1>ログイン</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label 'メールアドレス', class:"form-title" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label 'パスワード', class:"form-title" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, class:"chk-box" %>
      <%= f.label '記憶する', class:"chk-title" %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn primary-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
